class Solution(object):
    def sumZero(self, n):
        """
        :type n: int
        :rtype: List[int]
        """
        r=[] #this is our result array
        if n%2!=0: #appending a 0 if the length of number is given odd
            r.append(0)
        x=n//2 #checking the pairs of number there will be a (i and -i)
        for i in range(1,x+1): #running numbers from 1 to x+1 the range
            r.append(i) #appending  the positve and then negative
            r.append(-i)
        return r #giving the resultant array


        
